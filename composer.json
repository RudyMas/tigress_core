{
  "name": "tigress/core",
  "description": "Tigress core library",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Rudy Mas",
      "email": "rudy.mas@rudymas.be",
      "homepage": "https://rudymas.be",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.5",
    "ext-dom": "*",
    "ext-exif": "*",
    "ext-libxml": "*",
    "dompdf/dompdf": ">=v3",
    "monolog/monolog": "^3.9",
    "tigress/controller": ">=2025",
    "tigress/data-converter": ">=2025",
    "tigress/data-files": ">=2025",
    "tigress/database": ">=2025",
    "tigress/encryption": ">=2024",
    "tigress/menu": ">=2025",
    "tigress/model": ">=2025",
    "tigress/repository": ">=2026",
    "tigress/rights": ">=2025",
    "tigress/router": ">=2025",
    "tigress/security": ">=2026",
    "twig/twig": "^v3",
    "twig/intl-extra": "^v3",
    "ezyang/htmlpurifier": "^4.18"
  },
  "require-dev": {
    "tigress/communication": "*",
    "tigress/form-builder": "*",
    "tigress/form-viewer": "*",
    "tigress/google_api": "*",
    "tigress/http_requests": "*",
    "tigress/kanban-board": "*",
    "tigress/manipulator": "*",
    "tigress/users": "*"
  },
  "autoload": {
    "files": [
      "src/helpers/functions.php"
    ],
    "psr-4": {
      "Tigress\\": "src/",
      "Controller\\": "src/controllers/",
      "Model\\": "src/models/",
      "Repository\\": "src/repositories/"
    }
  }
}
