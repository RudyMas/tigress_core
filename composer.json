{
  "name": "tigress/core",
  "description": "Tigress core library",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Rudy Mas",
      "email": "rudy.mas@rudymas.be",
      "homepage": "https://rudymas.be",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.4",
    "ext-dom": "*",
    "tigress/menu": "*",
    "dompdf/dompdf": ">=v3",
    "twig/twig": ">=v3",
    "twig/intl-extra": ">=v3"
  },
  "require-dev": {
    "tigress/database": "dev-main",
    "tigress/data-converter": "dev-main",
    "tigress/data-files": "dev-main",
    "tigress/encryption": "dev-main",
    "tigress/model": "dev-main",
    "tigress/repository": "dev-main",
    "tigress/rights": "dev-main",
    "tigress/router": "dev-main",
    "tigress/security": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "Tigress\\": "src/",
      "Controller\\": "src/controllers/",
      "Model\\": "src/models/",
      "Repository\\": "src/repositories/"
    }
  }
}